<?xml version='1.0' encoding='utf-8'?>
<widget id="co.basecase.canvasvideodemo" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>iOS-Canvas-Video</name>
  <description>
    A sample Apache Cordova application that demostrates how to play video on canvas with correct orientation
  </description>
  <author email="ye@basecase.co" href="https://basecase.co">
    Ye Liu
  </author>
  <content src="index.html" />
  <preference name="Orientation" value="portrait" />
  <plugin name="cordova-plugin-whitelist" spec="1" />
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
    <allow-intent href="market:*" />
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
    <preference name="AllowInlineMediaPlayback" value="true" />
  </platform>
  <engine name="ios" spec="~4.0.1" />
  <plugin name="cordova-plugin-media-capture" spec="~1.2.0" />
  <plugin name="cordova-plugin-console" spec="~1.0.2" />
</widget>
